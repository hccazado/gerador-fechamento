<%-include("partials/header.ejs")%>
<div class="container-sm d-flex justify-content-center mb-5 mt-5 login">
    <form method="POST" action="/login">
        <h4 class="text-primary justify-self-center">Login</h4>
        <%if(error){%>
            <p class="text-danger">Login ou senha invalidos!</p>
        <%}%>
        <div class="mt-3">
            <label for="email" class="form-label">
                Email
            </label>
            <input type="email" id="email" class="form-control" name="email" required placeholder="Digite email">
        </div>
        <div class="mt-3">
            <label for="password" class="form-label">
                Senha
            </label>
            <input type="password" class="form-control" id="password" name="password" placeholder="senha" required>
        </div>
            <button class="btn btn-primary mt-3" type="submit">Entrar</button>
    </form>
</div>
<%-include("partials/footer.ejs")%>